{
  "include": [
    "./src/",
  ],
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "declaration": false,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "outDir": "./dist",
    "sourceMap": false,
    "strictNullChecks": false,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
